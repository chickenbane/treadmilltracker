<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:useDefaultMargins="true" >

    <TextView
        android:id="@+id/textViewThisWeekLabel"
        android:layout_column="0"
		android:layout_gravity="right"
		android:textSize="16sp"
        android:text="@string/label_thisWeek" />
    
    <TextView
        android:id="@+id/textViewThisWeek"
        android:layout_gravity="left"
        android:textSize="32sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/textViewLastWeekLabel"
        android:layout_column="0"
		android:layout_gravity="right"
		android:textSize="16sp"
        android:text="@string/label_lastWeek" />
    
   <TextView
        android:id="@+id/textViewLastWeek"
        android:layout_gravity="left"
        android:textSize="24sp"
         />

    <TextView
        android:id="@+id/textViewStreak"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="right"
        android:textSize="16sp" />

</GridLayout>